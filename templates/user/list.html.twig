<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <title>Utilisateurs</title>
        <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1" />
        {{ include('layouts/styles.html.twig') }}
    </head>
    <body>
        {{ include('layouts/header.html.twig') }}
        <div id="app" class="container">
            <h2>Utilisateurs</h2>
            <span>Liste des utilisateurs</span>
            <hr>
            <div class="row">
                <div class="col-md-10">
                    <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text">Recherche</span>
                    </div>
                    <input type="text" class="form-control" placeholder="Rechercher un utilisateur">
                    </div>
                </div>
                <div class="col-md-2">
                    <a class="button_link" href="{{ path('user_add') }}" ><button class="btn btn-primary btn-block">Ajouter</button></a>
                </div>
            </div>
            <table class="table table-bordered table-sm">
                <thead class="thead-dark">
                <tr>
                    <th>Identifiant</th>
                    <th>Nom complet</th>
                    <th>Date de création</th>
                    <th>Date de dernière modification</th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                {% for user in users %}
                    <tr>
                        <td width="80">{{ user.getLogin() }}</td>
                        <td>{{ user.getFirstname() }} {{ user.getLastname() }}</td>
                        <td>{{ user.getCreatedAt().format('d/m/Y H:i:s') }}</td>
                        <td>{{ user.getUpdatedAt().format('d/m/Y H:i:s') }}</td>
                        <td width="170">
                            <a class="button_link" href="{{ path('user_edit', {'username' : user.getLogin()}) }}" ><button class="btn btn-info btn-sm">Modifier</button></a>
                            <a class="button_link" href="{{ path('user_delete', {'username' : user.getLogin()}) }}" ><button class="btn btn-danger btn-sm">Supprimer</button></a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
{{ include('layouts/footer.html.twig') }}
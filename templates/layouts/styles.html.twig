{% set currentPath = path(app.request.attributes.get('_route'),
                       app.request.attributes.get('_route_params')) %}


<link rel="stylesheet" href="{{ asset('lib/css/bootstrap.min.css') }}" type="text/css" />

{% if currentPath == '/' %}
    <link rel="stylesheet" href="{{ asset('css/home/index.css') }}" type="text/css" />
{% elseif currentPath == '/login' %}
    <link rel="stylesheet" href="{{ asset('css/home/login.css') }}" type="text/css" />
{% elseif currentPath == '/email' %}
    <link rel="stylesheet" href="{{ asset('css/email/test.css') }}" type="text/css" />
{% elseif currentPath == '/chat' %}
    <link rel="stylesheet" href="{{ asset('css/chat/test.css') }}" type="text/css" />
{% endif %}